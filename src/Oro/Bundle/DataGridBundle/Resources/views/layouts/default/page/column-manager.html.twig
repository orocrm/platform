{% block _commerce_column_manager_widget %}
    <script type="text/template" id="frontend-column-manager-tpl">
        <div class="datagrid-manager">
            <div class="datagrid-manager__header">
                <div class="datagrid-manager__title"><%= _.__('oro_frontend.column_manager.title') %></div>
                <span class="close">×</span>
            </div>
            <div class="datagrid-manager-filter" data-role="column-manager-filter"></div>
            <div class="datagrid-manager__actions">
                <a href="#" data-role="column-manager-select-all"><%= _.__('oro.datagrid.column_manager.select_all')%></a>
                <span class="datagrid-manager__separator">|</span>
                <a href="#" data-role="column-manager-unselect-all"><%= _.__('oro.datagrid.column_manager.deselect_all')%></a>
            </div>
            <div class="datagrid-manager-table" data-role="column-manager-table"></div>
            <div class="datagrid-manager__footer" data-role="column-manager-footer">
                <a href="#" class="link" data-role="column-manager-reset">
                    <i class="fa fa-refresh"></i>
                    <span><%= _.__('oro.datagrid.column_manager.reset')%></span>
                </a>
            </div>
        </div>
    </script>
{% endblock %}

{% block _commerce_column_manager_filter_widget %}
    <script type="text/template" id="frontend-column-manager-filter-tpl">
        <div class="datagrid-manager-search<% if (search.length === 0) { %> empty<% } %>">
            <input type="text" data-role="column-manager-search" value="<%=search %>"
                   placeholder="<%= _.__('oro.datagrid.column_manager.filter.search_placeholder') %>" />
            <a href="#" class="clear" data-role="column-manager-clear-search" title="<%= _.__('oro.datagrid.column_manager.filter.clear_search_tooltip') %>">×</a>
        </div>
    </script>
{% endblock %}

{% block _commerce_column_manager_collection_widget %}
    <script type="text/template" id="frontend-column-manager-collection-tpl">
        <div class="table-wrapper" data-role="column-manager-table-wrapper">
            <table class="table">
                <tbody></tbody>
            </table>
        </div>
        <div class="datagrid-manager__no-columns"><span><%= _.__('oro.datagrid.column_manager.empty_list') %></span></div>
    </script>
{% endblock %}

{% block _commerce_column_manager_item_widget %}
<script type="text/template" id="frontend-column-manager-item-tpl">
    <td class="datagrid-manager__item">
        <div class="datagrid-manager__container">
            <span class="datagrid-manager__handle handle"></span>
            <div class="datagrid-manager__label">
                <label data-checkbox
                       class="custom-checkbox ">
                    <input type="checkbox" data-role="renderable"
                    <% if (disabledVisibilityChange) { %> disabled <% } %>
                    <% if (renderable) { %> checked <% } %>
                        class="custom-checkbox__input"
                    />
                    <span class="custom-checkbox__icon"></span>
                    <span class="custom-checkbox__text"><%= label %></span>
                </label>
            </div>

            <div class="datagrid-manager__move">
                <span class="datagrid-manager__move-btn datagrid-manager__move-up" data-role="moveUp" title="Move column up">
                    <i class="fa-long-arrow-up"></i>
                </span>
                <span class="datagrid-manager__move-btn datagrid-manager__move-down" data-role="moveDown" title="Move column down">
                    <i class="fa-long-arrow-down"></i>
                </span>
            </div>
        </div>
    </td>
</script>
{% endblock %}
